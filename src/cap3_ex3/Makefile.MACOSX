CXX=g++
RM=rm -f
LIBS = -framework GLUT -framework OpenGL
CXXFLAGS=-Wno-deprecated
BINDIR=../../bin

SRCS=ex3.cpp
OBJS=$(subst .cpp,.o,$(SRCS))
BIN = ex3

all: $(BIN)

$(BIN): $(OBJS)
	$(CXX)  -o $(BIN) $(OBJS) $(LIBS) $(CXXFLAGS)

install: $(BIN)
	mv $(BIN) $(BINDIR)

clean:
	$(RM) $(OBJS);\
	$(RM) $(BIN);

distclean: clean
	$(RM) $(BINDIR)/$(BIN)
