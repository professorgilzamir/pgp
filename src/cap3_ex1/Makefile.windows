CXX=g++
RM=rm
LIBS = -lfreeglut -lOpenGL32
INCDIRS = -I../../includes
CXXFLAGS=-Wall -g $(INCDIRS)
BINDIR=../../bin

SRCS=ex.cpp
OBJS=$(subst .cpp,.o,$(SRCS))
BIN = ex

all: $(BIN)

$(BIN): $(OBJS)
	$(CXX)  -o $(BIN) $(OBJS) $(LIBS) $(CXXFLAGS) libglew32.dll.a

install: $(BIN)
	mv $(BIN) $(BINDIR)/$(BIN)

clean:
	$(RM) $(OBJS);\
	$(RM) $(BIN);

distclean: clean
	$(RM) $(BINDIR)/$(BIN)
